---
# Customer Data Tools - Secrets Configuration Template
# Copy this file to secrets.yml and fill in your actual values
# DO NOT commit secrets.yml to git!

# Application Configuration
APP_NAME: Customer Data Tools
DEBUG: "true"
PORT: "6001"
SECRET_KEY: your-secret-key-here
SESSION_TIMEOUT_MINUTES: "60"

# Bookmarked Staging Environment
STAGING_API_URL: https://staging-api.bookmarked.com
STAGING_DB_HOST: your-staging-db-host
STAGING_DB_PORT: "5432"
STAGING_DB_NAME: your-staging-db-name
STAGING_DB_USER: your-staging-db-user
STAGING_DB_PASSWORD: your-staging-db-password

# Bookmarked Production Environment
PRODUCTION_API_URL: https://api.bookmarked.com
PRODUCTION_DB_HOST: ""
PRODUCTION_DB_PORT: "5432"
PRODUCTION_DB_NAME: bookmarked_production
PRODUCTION_DB_USER: ""
PRODUCTION_DB_PASSWORD: ""

# ClassLink Integration
CLASSLINK_API_URL: https://nodeapi.classlink.com/v2
CLASSLINK_API_KEY: your-classlink-api-key

# ClickUp Integration
CLICKUP_API_URL: https://api.clickup.com/api/v2
CLICKUP_API_KEY: your-clickup-api-key

# HubSpot Integration
HUBSPOT_API_URL: https://api.hubapi.com
HUBSPOT_CLIENT_ID: ""
HUBSPOT_CLIENT_SECRET: ""
HUBSPOT_REDIRECT_URI: http://localhost:6001/auth/hubspot/callback

# Google APIs
GOOGLE_BOOKS_API_KEY: ""
GOOGLE_SEARCH_API_KEY: ""
GOOGLE_SEARCH_ENGINE_ID: ""

# Claude AI
CLAUDE_API_KEY: ""

# AWS Configuration
AWS_REGION: us-east-1
AWS_ACCESS_KEY_ID: ""
AWS_SECRET_ACCESS_KEY: ""
AWS_SECRETS_MANAGER_ENABLED: "false"

# Security
REQUIRE_HTTPS: "false"
PRODUCTION_ACCESS_REQUIRES_2FA: "false"

# Logging
LOG_LEVEL: INFO
LOG_FILE: logs/app.log
